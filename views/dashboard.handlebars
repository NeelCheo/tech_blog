<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Dashboard</h1>
      <a href="/newpost" class="btn btn-primary">Create New Post</a> 
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#each posts}}
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.body}}</p>
            <a href="/post/edit/{{this.id}}" class="btn btn-primary">Edit</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
