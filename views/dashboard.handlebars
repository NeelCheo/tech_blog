<h1>Your Dashboard</h1>

<button onclick="window.location.href='/newpost'">Add Post</button>

{{#each posts as |post|}}
  <div class="post">
    <h2>{{post.title}}</h2>
    <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
    <p>{{post.body}}</p>
    <a href="/post/edit/{{post.id}}">Edit Post</a>
  </div>
{{/each}}
